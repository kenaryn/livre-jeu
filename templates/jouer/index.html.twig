{% extends 'base.html.twig' %}

{% block title %}Liste de personnages{% endblock %}

{% block body %}

<div class="row">
    {# <div class="mb-3 mb-sm-0"> #}
        {% for personnage in personnages %}
            <div class="card text-center" style="width: 18rem;">
                <img class="card-img-top" src="{{ asset('images/avatars/'~personnage.avatar.getNomFichier()) }}" alt="{{ personnage.avatar.getNomFichier() }}">
                <div class="card-body">
                    <a href="#" class="btn btn-primary">{{ personnage.prenom }} {{ personnage.nom }}</a>
                </div>
            </div>
        {% else %}
            <p>Aucun personnage trouvé.</p>
        {% endfor %}
    {# </div> #}
</div>
    

<div class="row">
    {# <div class="mb-3 mb-sm-0"> #}
        {# <div class="card"> #}
            <a href="#" class="btn btn-primary">Créer</a>
        {# </div> #}
    {# </div> #}
</div>

{% endblock %}
